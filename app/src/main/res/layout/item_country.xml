<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="@dimen/Light_96"
        android:layout_height="@dimen/Light_96"
        android:id="@+id/iv_country_manage_now_weather"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/icon_103"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/Medium_20"
        android:id="@+id/tv_country_manage_name"
        android:text="北京市"
        app:layout_constraintLeft_toRightOf="@+id/iv_country_manage_now_weather"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_country_manage_weather"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/Medium_14"
        android:id="@+id/tv_country_manage_weather"
        app:layout_constraintLeft_toRightOf="@+id/iv_country_manage_now_weather"
        android:text="小雨"
        app:layout_constraintTop_toBottomOf="@+id/tv_country_manage_name"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/Medium_14"
        android:id="@+id/country_manage_temp"
        android:text="12"
        app:layout_constraintLeft_toRightOf="@+id/tv_country_manage_weather"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_country_manage_name"/>
    <ImageButton
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_baseline_close_24"
        android:id="@+id/country_manage_delete"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="30dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>