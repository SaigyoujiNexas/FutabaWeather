<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.MainActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/iv_main_back"
        android:src="@mipmap/back_100d"
        android:scaleType="centerCrop"
        />

    <RelativeLayout
        android:id="@+id/rv_top_bar"
        android:fitsSystemWindows="true"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_country_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="铜川"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:layout_alignParentStart="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25"
            android:textSize="20sp"
            android:id="@+id/country_now_temperature"
            android:visibility="gone"
            android:layout_toRightOf="@id/tv_country_text"
            android:textColor="@color/white"
            android:layout_margin="10dp"/>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:id="@+id/iv_setting"
            android:layout_margin="10dp"
            android:src="@mipmap/icon_set"/>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_toLeftOf="@id/iv_setting"
            android:src="@mipmap/icon_add_city"
            android:layout_margin="10dp"
            android:id="@+id/iv_add_city"/>
    </RelativeLayout>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:id="@+id/swipe_refresh"
        app:layout_constraintTop_toBottomOf="@+id/rv_top_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp">
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_weather"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/rv_top_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp"/>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</androidx.constraintlayout.widget.ConstraintLayout>